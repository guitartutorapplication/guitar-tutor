<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jlo19.guitartutor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AllChordsActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ChordActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.AllChordsActivity" />
        <activity
            android:name=".activities.VideoActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.ChordActivity" />
        <activity
            android:name=".activities.DiagramHelpActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.ChordActivity" />
    </application>

</manifest>