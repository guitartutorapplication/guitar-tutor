<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?android:attr/colorForeground</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name ="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name ="AppTheme.ToolbarText" parent = "TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name ="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name ="AppTheme.ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name ="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:height">@dimen/button_min_width_height</item>
        <item name="android:width">@dimen/button_min_width_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
