<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jlo19.guitartutor.activities.LearnChordActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/shadow"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView"
            android:layout_marginStart="30dp"
            android:scaleType="fitCenter"
            android:contentDescription=""
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <View
        android:id="@+id/shadow"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_above="@+id/btnLayout"
        android:nestedScrollingEnabled="false"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/watch_button_text"
            android:layout_height="wrap_content"
            android:id="@+id/btnWatch"
            android:theme="@style/AppTheme.InstructionButton"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/viewCenter"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:drawableTop="@drawable/play_icon"
            android:drawablePadding="2dp"
            android:layout_width="180dp" />

        <View
            android:id="@+id/viewCenter"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="20dp" />

        <Button
            android:text="@string/diagram_help_button_text"
            android:layout_height="wrap_content"
            android:id="@+id/btnHelp"
            android:textSize="20sp"
            android:drawableTop="@drawable/help_icon"
            android:layout_alignBottom="@+id/btnWatch"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/viewCenter"
            android:drawablePadding="2dp"
            android:layout_width="180dp" />
    </RelativeLayout>

</RelativeLayout>
