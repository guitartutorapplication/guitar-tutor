<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    tools:context="com.example.jlo19.guitartutor.activities.HomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <Button
        android:text="@string/learn_chords_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLearn"
        android:layout_above="@+id/viewCenter"
        android:layout_centerHorizontal="true"
        android:width="500dp"
        android:textSize="50sp"
        android:height="200dp" />

    <View
        android:id="@+id/viewCenter"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp" />

    <Button
        android:text="@string/practise_chords_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPractise"
        android:width="500dp"
        android:textSize="50sp"
        android:height="200dp"
        android:layout_below="@+id/viewCenter"
        android:layout_alignStart="@+id/btnLearn" />

</RelativeLayout>