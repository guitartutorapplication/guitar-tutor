<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_practise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jlo19.guitartutor.activities.PractiseActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:text="@string/practise_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/txtInstruction"
        android:textSize="40sp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textStyle="italic" />

    <Button
        android:text="@string/start_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="50sp"
        android:drawableTop="@drawable/play_icon"
        android:width="200dp"
        android:height="150dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="@string/stop_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStop"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="50sp"
        android:drawableTop="@drawable/stop_icon"
        android:width="200dp"
        android:height="150dp"
        android:visibility="invisible"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/txtChord"
        android:textStyle="bold"
        android:textSize="340sp"
        android:textColor="@color/colorText" />

</RelativeLayout>
